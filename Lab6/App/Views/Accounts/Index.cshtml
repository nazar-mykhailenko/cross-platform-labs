@model List<Account>

<h1>Accounts</h1>

<form asp-action="Search" method="get">
    <div>
        <label for="minBalance">Min Balance:</label>
        <input type="number" step="0.01" name="minBalance" id="minBalance" />
    </div>
    <div>
        <label for="maxBalance">Max Balance:</label>
        <input type="number" step="0.01" name="maxBalance" id="maxBalance" />
    </div>
    <div>
        <label for="startDate">Start Date:</label>
        <input type="date" name="startDate" id="startDate" />
    </div>
    <div>
        <label for="endDate">End Date:</label>
        <input type="date" name="endDate" id="endDate" />
    </div>
    <div>
        <label for="nameStart">Name Start:</label>
        <input type="text" name="nameStart" id="nameStart" />
    </div>
    <div>
        <label for="nameEnd">Name End:</label>
        <input type="text" name="nameEnd" id="nameEnd" />
    </div>
    <button type="submit">Search</button>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date Opened</th>
            <th>date Closed</th>
            <th>Balance</th>
            <th>Other Details</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.AccountId</td>
                <td>@account.AccountName</td>
                <td>@account.DateOpened.ToShortDateString()</td>
                <td>@account.DateClosed?.ToShortDateString()</td>
                <td>@account.CurrentBalance</td>
                <td>@account.OtherAccountDetails</td>
                <td>
                    <a asp-action="Details" asp-route-id="@account.AccountId">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
